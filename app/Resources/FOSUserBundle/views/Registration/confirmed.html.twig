{% extends "base.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}
    {% block fos_user_content %}
     <div class="row">
        <div class="col-sm-8 col-md-offset-2" >
       <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="alert alert-success">
                    <i class="fa fa-check-circle fa-fw" style="font-size:40px;"></i> Welcome to nimi kiddies,
                    {{ user.username  }}.
                </div>
            </div>
            <!-- .panel-body -->
        </div>
     </div>

        <div class="row">
            <div class="col-sm-8 col-md-offset-2" >

                <div class="login-panel panel panel-default">

                    <div style="text-align:center;  padding: 50px;">
                        <p>{{ 'registration.confirmed'|trans({'%username%': user.username}) }}</p>

                        <h3>You'll be able to sign to nimi kiddies with  <strong>{{ user.username }}</strong> </h3>
                        <ul>
                            <li>To manage your account and check your activities at any time go to <strong>
                                    <a href="{{ path('showProfileAccount') }}">my Nimi kidies</a></strong> on your device</li>
                        </ul>


                        {% if targetUrl %}
                            <p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

    {% endblock fos_user_content %}
{% endblock %}