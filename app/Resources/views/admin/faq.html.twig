{% extends 'admin/base.html.twig' %}
    {% block page %}



        <div class="col-sm-6 col-md-8 col-lg-8">
            <div class="jumbotron">


                  <div class="thumbnail">
                      {% if form is defined %}
                           <h3 class="h1">Manage questions </h3>
                          {{ include('admin/_form.html.twig') }}
                      {% endif %}

                      {% if question is defined %}
                            <h3>Unanswered Questions </h3>
                      <table class="table table-responsive table-hover">
                          <tbody>
                          {% for news in question %}
                              <tr> <td> <a href="faq/answer/{{ news.id }}"> {{ news.question |capitalize }}  </a></td> </tr>
                          {%  endfor %}
                          </tbody>
                      </table>
                      {% endif %}
                  </div>
            </div>
        </div>
        <div class="col-sm-6 col-md-3 col-lg-4">
            {% block sideBarRight %}
                <div class="jumbotron message">

                    {% if recentUnansweredMessages is defined %}
                        <h3>Recent Messages </h3>
                        <table class="table  table-hover">
                            <tbody>
                            {% for Message in recentUnreadMessages %}
                                <tr><td> <a href="/admin/message/read/{{ Message.id }}"> {{ Message.title |capitalize }} - {{ Message.posted |date }}</a></td></tr>
                            {%  endfor %}
                            </tbody>
                        </table>

                    {% endif %}
                </div>
                <hr />
                <div class="jumbotron message">

                    {% if recentMessages is defined %}
                        <h3 class="page-header">Recent Messages </h3>
                        <table class="table  table-hover">
                            <tbody>
                            {% for Message in recentMessages %}
                                <tr><td> <a href="/admin/message/read/{{ Message.id }}"> {{ Message.title |capitalize }} - {{ Message.posted |date }}</a></td></tr>
                            {%  endfor %}
                            </tbody>
                        </table>

                    {% endif %}
                </div>
                <hr />
                <div class="jumbotron message">

                    {% if recentReadMessages is defined %}
                        <h3> Recent Read Messages </h3>
                        <table class="table  table-hover">
                            <tbody>
                            {% for Message in recentReadMessages %}
                                <tr><td> <a href="/admin/message/read/{{ Message.id }}"> {{ Message.title |capitalize }} - {{ Message.posted |date }}</a></td></tr>
                            {%  endfor %}
                            </tbody>
                        </table>

                    {% endif %}
                </div>
                <hr />
                <div class="jumbotron message">

                    {% if unreadMessages is defined %}
                        <h3> Unread Messages </h3>
                        <table class="table  table-hover">
                            <tbody>
                            {% for Message in unreadMessages %}
                                <tr><td> <a href="/admin/message/read/{{ Message.id }}"> {{ Message.title |capitalize }} - {{ Message.posted |date }}</a></td></tr>
                            {%  endfor %}
                            </tbody>
                        </table>

                    {% endif %}
                </div>


            {% endblock %}
        </div>
    {% endblock %} 

 
  

    
