{% extends "base.html.twig" %}

{% block content %}
<div class="page-header">
<h1>Order Details <small>Finalize your order</small></h1>
</div>
{#
{% include 'SyliusSandboxBundle:Frontend/Checkout:_progressBar.html.twig' %}#}

<div class="form-horizontal">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>product</th>
                <th>quantity</th>
                <th><span class="pull-right">unit price</span></th>
                <th><span class="pull-right">line total</span></th>
            </tr>
        </thead>
        <tbody>
            {% for item in order.items %}

                {% set product = item.product %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>
                    <p>{{ product }}</p>
                </td>
                <td>{{ item.quantity }}</td>
                <td>
                    <span class="pull-right">
                    {{ item.unitPrice }}
                    </span>
                </td>
                <td>
                    <span class="pull-right">
                    {{ item.total }}
                    </span>
                </td>
            </tr>
            {% endfor %}

            <tr>
                <td colspan="4">
                </td>
                <td colspan="2">
                    <span class="pull-right">
                    <strong>Total</strong>: {{ order.total }}
                    </span>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="form-actions">
        <a href="" class="btn btn-large">back</a> &nbsp;
      <a href="{{ path('checkout_complete', {'id':  order.id}) }}" class="btn btn-large
        btn-success">order</a> &nbsp;
    </div>
</div>
{% endblock %}
