                    <fieldset>
                        {{ form_widget(registrationForm) }}
                    </fieldset>
                    <div class="form-actions">
                        <input type="submit" class="btn btn-success btn-large span3" value="register" />
                    </div>
                    </form>
            </div>
        </div>#}
        {% endblock %}
    </div>
</div>
{% endblock %}
